{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Orion",
    "version": "0.0.4"
  },
  "tauri": {
    "allowlist": {
      "dialog":{
        "confirm": true,
        "message":true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": false,
        "request": true
      }
    },
    "windows": [
      {
        "title": "Orion",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.orion.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
